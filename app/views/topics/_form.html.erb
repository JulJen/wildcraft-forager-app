<%= simple_form_for @topic do |f| %>

  <%= f.error_notification %>

  <br><br>


  <%= f.input :name, include_blank: false %><br><br>

  <%= f.input :description, include_blank: false %><br><br>

  <%= f.collection_select :category_id, Category.all.order(:name), :id, :name, {include_blank: "Select from existing categories"} %>

  <br><br>

  <%= f.submit 'Create' %>

<% end %>
