<div>
  <div style="text-align: center;">
    <div style="display: inline-block; text-align: left;">

      <h3 align="center">Topic: <%= link_to "#{@topic.name}",  edit_topic_path(@topic) %></h3>
      <h3 align="center">Description: <%= @topic.description %></h3>
      <p>Category: <%= @category_by_name %></p>
      <p>Admin: <%= @admin_by_name %></p>

      <br><br>

      <%= simple_form_for [@topic, @post] do |f| %>
        <%= f.input :name %><br>
        <%= f.input :description %><br>
        <%= submit_tag "New Post" %>
      <% end %>

      <br><br>


      <% if !@current_posts.empty?%>

        <p>
          <%= link_to "Load posts", topic_posts_path(@topic), :class=> "load_posts", :remote => true %>
        </p>

        <div class = "posts">
          <h3>

          </h3>
        </div>

      <% end %><br>
    </div>
  </div>
</div>
