<div>
  <div style="text-align: center;">
    <div style="display: inline-block; text-align: left;">

      <h3>Topic: <%= link_to "#{@topic.name}",  edit_topic_path(@topic) %></h3>
      <h3>Description: <%= @topic.description %></h3>
      <p>Category: <%= @category_by_name %></p>
      <p>Admin: <%= @admin_by_name %></p>


      <% if !@current_members.empty? %>
        <p>Members: <p>
        <% @current_members.each do |member| %>
          <ul>
          <%=  find_user_name(member) %>
          </ul>
        <% end %>

      <% elsif @admin_invite == true  %>
        <p>No members yet, <b><%= link_to "invite new member",  new_member_path(@topic) %></b></p>

      <% else %>
        <p>No members yet.</p>
      <% end %>


      <% if !@current_posts.empty?%>

        <%= form_tag @posts, method: :get do %>
        <%= select(:sort, "filters", options_for_select(@filters)) %>
        <%= submit_tag "Sort" %>
        <% end %>

      <% end %>

      <br>

      <% @current_posts.each do |post| %>
        <!-- <% if post.status == true %> -->
          <h4> Inactive - <%= link_to "#{post.name}", edit_topic_post_path(post.topic_id, post.id) %></h4>
        <!-- <% else %> -->
          <h4> Active - <%= link_to "#{post.name}", edit_topic_post_path(post.topic_id, post.id) %></h4>
        <% end %>
      <% end %>

       <br>

      <div style="width: 500px;margin:auto">
        <img style="width: 500px" src="https://images.pexels.com/photos/908295/pexels-photo-908295.jpeg?auto=compress&cs=tinysrgb&h=650&w=940">
      </div>

    </div>
  </div>
</div>
