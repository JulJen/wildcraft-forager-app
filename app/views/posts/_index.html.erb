<div>
  <div style="text-align: center;">
    <div style="display: inline-block; text-align: left;">

    <h3>Name: <%= link_to "#{@topic.name}",  edit_topic_path(@topic) %></h3>
    <h3>Description: <%= @topic.description %></h3>

    <%= form_tag(@post, method: :get) do %>
      <%= select(:sort, "filters", options_for_select(@filters)) %>
      <%= submit_tag "Sort" %>
    <% end %><br>

    <% @current_posts.each do |post| %>
      <h4> <%= link_to "#{post.name}", edit_topic_post_path(post.topic_id, post.id) %></h4>
    <% end %>
    
    </div>
  </div>
</div>
