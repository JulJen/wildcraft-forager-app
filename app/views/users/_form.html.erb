<%= simple_form_for @user, url: signup_path, wrapper: :inline_form, html: { class: 'form-inline' } do |f| %>

  <%= f.error_notification input_html: { class: 'error' } %>

  <br><br>

  <%= f.input :name, :placeholder => "Your Username" %>

  <br><br>

  <%= f.input :email, input_html: { autocomplete: 'email' }, :placeholder => "Your Email"  %>

  <br><br>

  <%= f.input :password, input_html: { autocomplete: 'current-password' }, :placeholder => "Your Password"  %>

  <br><br>
  
  <%= f.submit "Sign Up", class: "btn btn-lg btn-primary" %>

<% end %>
