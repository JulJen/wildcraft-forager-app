<%= simple_form_for @user, url: '/signin' do |f| %>

  <%= f.error_notification %>


  <%= f.label :name %>
  <%= f.collection_select(:name, User.all, :id, :name, prompt: "Select your name") %><br>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br><br>
  <%= f.submit "Sign In", class: "btn btn-lg btn-primary" %>
  <br><br>
<% end %>
