    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">WildCraft Forager</a>
      </div>
      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Home</a></li>
        <li><%= link_to "Profile", profile_path(current_user) %></li>
